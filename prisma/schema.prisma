// File: prisma/schema.prisma
// Last edited: 2025-11-10 22:02 Europe/London
// Notes:
// - Normalised whitespace (removed non-breaking spaces that can break prisma fmt).
// - Prices/taxes now use @db.Decimal(12,2) for consistent SQL types.
// - Kept your multi-tenant structure. Relation names preserved.
// - Safe defaults; no preview features required.

// ───────────────────────────────────────────────────────────────────────────────
// Generators & Datasource
// ───────────────────────────────────────────────────────────────────────────────

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ───────────────────────────────────────────────────────────────────────────────
// Enums
// ───────────────────────────────────────────────────────────────────────────────

enum UserRole {
  STAFF
  CUSTOMER
}

enum BillingStatus {
  ok
  grace
  suspended
}

enum ItemType {
  labour
  part
  misc
}

// ───────────────────────────────────────────────────────────────────────────────
// Core multi-tenant models
// ───────────────────────────────────────────────────────────────────────────────

model Group {
  id               String   @id @default(uuid())
  group_name       String
  trading_name     String?
  company_number   String?
  vat_number       String?
  address          String?
  billing_email    String   @unique
  is_franchise_grp Boolean  @default(false)
  created_at       DateTime @default(now())

  billing    GroupBilling?
  features   GroupFeature[]
  sites      Site[]
  roles      Role[]
  users      User[]
  customers  Customer[]
  vehicles   Vehicle[]
  services   ServiceCatalogue[] // Services at Group level (master list)
  parts      PartCatalogue[]
  tax_rates  TaxRate[]
  audit_logs AuditLog[]
  bookings   Booking[]
  job_cards  JobCard[]
}

model GroupBilling {
  id               String        @id @default(uuid())
  group_id         String        @unique
  plan_name        String
  status           BillingStatus
  retention_months Int
  included_sites   Int
  active_sites_cnt Int           @default(1)
  created_at       DateTime      @default(now())
  updated_at       DateTime      @default(now())

  group Group @relation(fields: [group_id], references: [id], onDelete: Cascade)
}

model GroupFeature {
  id          String  @id @default(uuid())
  group_id    String
  feature_key String
  enabled     Boolean @default(false)

  group Group @relation(fields: [group_id], references: [id], onDelete: Cascade)

  @@unique([group_id, feature_key])
}

model Site {
  id             String   @id @default(uuid())
  group_id       String
  site_name      String
  trading_name   String?
  company_number String?
  vat_number     String?
  address        String?
  phone          String?
  email          String?
  timezone       String   @default("Europe/London")
  currency_code  String   @default("GBP")
  locale         String   @default("en-GB")
  is_franchise   Boolean  @default(false)
  is_active      Boolean  @default(true)
  created_at     DateTime @default(now())

  // --- NEW CONFIGURATION FIELDS ---
  pricing_display_mode String @default("ex_vat") // Ex VAT/Inc VAT display
  supported_countries  Json?
  supported_currencies Json?
  // --------------------------------

  group          Group              @relation(fields: [group_id], references: [id], onDelete: Cascade)
  features       SiteFeature[]
  profit_centres ProfitCentre[]
  users          User[]
  customers      Customer[]
  bookings       Booking[]
  job_cards      JobCard[]
  services       ServiceCatalogue[]

  @@index([group_id])
}

model SiteFeature {
  id          String  @id @default(uuid())
  site_id     String
  feature_key String
  enabled     Boolean @default(false)

  site Site @relation(fields: [site_id], references: [id], onDelete: Cascade)

  @@unique([site_id, feature_key])
}

model ProfitCentre {
  id         String   @id @default(uuid())
  site_id    String
  name       String
  type       String?
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())

  site      Site      @relation(fields: [site_id], references: [id], onDelete: Cascade)
  job_cards JobCard[]
  bookings  Booking[]

  @@index([site_id])
}

model Role {
  id          String  @id @default(uuid())
  group_id    String
  name        String
  description String?
  permissions Json    @default("{}")

  group Group  @relation(fields: [group_id], references: [id], onDelete: Cascade)
  users User[]

  @@index([group_id])
}

// ───────────────────────────────────────────────────────────────────────────────
// Identity
// ───────────────────────────────────────────────────────────────────────────────

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          UserRole  @default(STAFF)

  // --- FIXED GREASEDESK FIELDS ---
  // Optional at creation time; enforced in app layer when linking staff.
  group_id   String?
  site_id    String?
  role_id    String?
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())

  // +++ CUSTOMER PORTAL LINK ---
  customerId String?   @unique
  customer   Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)

  // --- RELATIONS ---
  group           Group?         @relation(fields: [group_id], references: [id], onDelete: SetNull)
  site            Site?          @relation(fields: [site_id], references: [id], onDelete: SetNull)
  staffRole       Role?          @relation(fields: [role_id], references: [id], onDelete: Restrict)
  job_cards       JobCard[]      @relation("JobCardMechanic")
  audit_logs      AuditLog[]
  job_card_photos JobCardPhoto[] @relation("JobCardPhotoUploader")

  // --- NEXTAUTH ---
  accounts Account[]
  sessions Session[]

  @@index([group_id])
  @@index([site_id])
  @@index([role_id])
}

model Customer {
  id         String   @id @default(uuid())
  group_id   String
  site_id    String
  name       String
  phone      String?
  email      String?
  notes      String?
  created_at DateTime @default(now())

  // +++ CUSTOMER PORTAL LINK ---
  userId String? @unique
  user   User?

  // --- RELATIONS ---
  group     Group     @relation(fields: [group_id], references: [id], onDelete: Cascade)
  site      Site      @relation(fields: [site_id], references: [id], onDelete: Cascade)
  vehicles  Vehicle[]
  bookings  Booking[]
  job_cards JobCard[]

  @@index([group_id, site_id])
}

model Vehicle {
  id                String   @id @default(uuid())
  group_id          String
  customer_id       String
  registration      String
  vin               String?
  make              String?
  model             String?
  derivative        String?
  fuel_type         String?
  transmission      String?
  engine_code       String?
  year              Int?
  mileage_at_create Int?
  created_at        DateTime @default(now())

  group     Group     @relation(fields: [group_id], references: [id], onDelete: Cascade)
  customer  Customer  @relation(fields: [customer_id], references: [id], onDelete: Cascade)
  bookings  Booking[]
  job_cards JobCard[]

  @@index([group_id, customer_id])
  @@index([registration])
}

model ServiceCatalogue {
  id                       String   @id @default(uuid())
  group_id                 String
  site_id                  String?
  service_code             String?
  name                     String
  description              String?
  default_duration_minutes Int?
  default_labour_rate      Decimal? @db.Decimal(12, 2)
  default_price            Decimal? @db.Decimal(12, 2)
  vat_rate                 Decimal? @default(20.00) @db.Decimal(5, 2)
  is_active                Boolean  @default(true)
  created_at               DateTime @default(now())

  group    Group     @relation(fields: [group_id], references: [id], onDelete: Cascade)
  site     Site?     @relation(fields: [site_id], references: [id], onDelete: Cascade)
  bookings Booking[]

  @@index([group_id, site_id])
}

model PartCatalogue {
  id          String   @id @default(uuid())
  group_id    String
  part_number String
  description String?
  brand       String?
  cost_price  Decimal? @db.Decimal(12, 2)
  sell_price  Decimal? @db.Decimal(12, 2)
  vat_rate    Decimal? @default(20.00) @db.Decimal(5, 2)
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())

  group Group @relation(fields: [group_id], references: [id], onDelete: Cascade)

  @@index([group_id, part_number])
}

model TaxRate {
  id         String    @id @default(uuid())
  group_id   String
  name       String?
  percentage Decimal   @db.Decimal(5, 2)
  valid_from DateTime
  valid_to   DateTime?

  group Group @relation(fields: [group_id], references: [id], onDelete: Cascade)

  @@index([group_id])
}

model Booking {
  id               String    @id @default(uuid())
  group_id         String
  site_id          String
  profit_centre_id String
  customer_id      String
  vehicle_id       String
  booking_date     DateTime
  start_time       DateTime?
  end_time         DateTime?
  service_id       String?
  resource_id      String?
  resource_type    String?
  status           String    @default("booked")
  created_at       DateTime  @default(now())

  group         Group             @relation(fields: [group_id], references: [id], onDelete: NoAction)
  site          Site              @relation(fields: [site_id], references: [id], onDelete: NoAction)
  profit_centre ProfitCentre      @relation(fields: [profit_centre_id], references: [id], onDelete: NoAction)
  customer      Customer          @relation(fields: [customer_id], references: [id], onDelete: NoAction)
  vehicle       Vehicle           @relation(fields: [vehicle_id], references: [id], onDelete: NoAction)
  service       ServiceCatalogue? @relation(fields: [service_id], references: [id], onDelete: SetNull)

  @@index([group_id, site_id, profit_centre_id, customer_id, vehicle_id])
}

model JobCard {
  id                     String    @id @default(uuid())
  group_id               String
  site_id                String
  profit_centre_id       String
  customer_id            String
  vehicle_id             String
  status                 String    @default("open")
  mechanic_assigned_id   String?
  odometer_in            Int?
  odometer_out           Int?
  labour_bill_numeric    Decimal?  @default(0) @db.Decimal(12, 2)
  labour_cost_numeric    Decimal?  @default(0) @db.Decimal(12, 2)
  parts_bill_numeric     Decimal?  @default(0) @db.Decimal(12, 2)
  parts_cost_numeric     Decimal?  @default(0) @db.Decimal(12, 2)
  completed_at           DateTime?
  archived_at            DateTime?
  signed_off_by_customer Boolean   @default(false)
  signed_off_at          DateTime?
  created_at             DateTime  @default(now())

  group             Group          @relation(fields: [group_id], references: [id], onDelete: NoAction)
  site              Site           @relation(fields: [site_id], references: [id], onDelete: NoAction)
  profit_centre     ProfitCentre   @relation(fields: [profit_centre_id], references: [id], onDelete: NoAction)
  customer          Customer       @relation(fields: [customer_id], references: [id], onDelete: NoAction)
  vehicle           Vehicle        @relation(fields: [vehicle_id], references: [id], onDelete: NoAction)
  mechanic_assigned User?          @relation("JobCardMechanic", fields: [mechanic_assigned_id], references: [id], onDelete: SetNull)
  photos            JobCardPhoto[]
  items             JobCardItem[]

  @@index([group_id, site_id, profit_centre_id, customer_id, vehicle_id])
  @@index([status])
}

model JobCardPhoto {
  id          String   @id @default(uuid())
  job_card_id String
  photo_type  String?
  file_url    String
  uploaded_by String?
  uploaded_at DateTime @default(now())

  job_card JobCard @relation(fields: [job_card_id], references: [id], onDelete: Cascade)
  user     User?   @relation("JobCardPhotoUploader", fields: [uploaded_by], references: [id], onDelete: SetNull)

  @@index([job_card_id])
}

model JobCardItem {
  id          String   @id @default(uuid())
  job_card_id String
  item_type   ItemType
  description String
  qty         Decimal  @default(1.00) @db.Decimal(12, 2)
  unit_cost   Decimal  @default(0) @db.Decimal(12, 2)
  unit_price  Decimal  @default(0) @db.Decimal(12, 2)
  vat_rate    Decimal  @default(20.00) @db.Decimal(5, 2)
  vat_amount  Decimal  @default(0) @db.Decimal(12, 2)
  created_at  DateTime @default(now())

  job_card JobCard @relation(fields: [job_card_id], references: [id], onDelete: Cascade)

  @@index([job_card_id])
}

model AuditLog {
  id         String   @id @default(uuid())
  group_id   String
  user_id    String?
  entity     String
  entity_id  String
  action     String
  diff_json  Json?
  created_at DateTime @default(now())

  group Group @relation(fields: [group_id], references: [id], onDelete: Cascade)
  user  User? @relation(fields: [user_id], references: [id], onDelete: SetNull)

  @@index([group_id])
  @@index([user_id])
}

// ───────────────────────────────────────────────────────────────────────────────
// NextAuth models (standard)
// ───────────────────────────────────────────────────────────────────────────────

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
